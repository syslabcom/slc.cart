<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<head>
  <metal:block metal:fill-slot="head_slot">

    <link rel="alternate" title="RSS 1.0" type="application/rss+xml"
          tal:define="here_url context/@@plone_context_state/object_url;"
          tal:condition="request/SearchableText|nothing"
          tal:attributes="href string:$here_url/search_rss?${request/QUERY_STRING}"/>

  </metal:block>

  <metal:block fill-slot="top_slot"
               tal:define="dummy python:request.set('disable_border',1);
                           disable_column_one python:request.set('disable_plone.leftcolumn',1);
                           disable_column_two python:request.set('disable_plone.rightcolumn',1);" />
</head>

<body>

  <div id="content-core" metal:fill-slot="main">

    <form name="searchform"
          action="@@search"
          class="searchPage enableAutoFocus"
          tal:define="portal context/@@plone_portal_state/portal;
                      st python:request.get('SearchableText', '');
                      DateTime python:modules['DateTime'].DateTime;">

        <fieldset id="search-field" i18n:domain="plone" class="noborder">
            <input class="searchPage searchInput"
                   name="SearchableText"
                   type="text"
                   size="25"
                   title="Search Site"
                   i18n:attributes="title title_search_title;"
                   tal:attributes="value st;"
                   />
            <input class="searchPage searchButton allowMultiSubmit"
                   type="submit"
                   value="Search"
                   i18n:attributes="value label_search;"/>

            <div id="subsearch">
              <div id="quicklinks">
                  <a href="categories" tal:attributes="href string:${context/portal_url}/categories">Categories</a> |
                  <a href="popular" tal:attributes="href string:${context/portal_url}/top">Popular</a> |
                  <a href="recent" tal:attributes="href string:${context/portal_url}/recent">Recent</a>
              </div>
            </div>
        </fieldset>

        <div class="row">

            <div class="cell width-16 position-0">
                <h1 class="documentFirstHeading"
                    i18n:translate=""
                    tal:condition="not:st">
                    Search results
                </h1>
                <h1 class="documentFirstHeading"
                    i18n:translate=""
                    tal:condition="st">
                    Search results for
                    <strong id="search-term" tal:content="st" i18n:name="term">
                        Search Term
                    </strong>
                </h1>

            </div>
            <div class="visualClear"><!-- --></div>
            <div id="search-results-wrapper"
                 class="cell width-16 position-0"
                 tal:define="b_start python:0;
                             b_start request/b_start | b_start;
                             batch python: view.results(b_size=25, b_start=b_start);
                             normalizeString nocall:context/@@plone/normalizeString;">

                <div id="search-results-bar">
                    <span i18n:translate="batch_x_items_matching_your_criteria" i18n:domain="plone"
                        tal:define="seq_length batch/sequence_length|string:0">
                        <strong i18n:name="number" id="search-results-number"
                                tal:content="seq_length">234</strong>
                        items matching your search terms.
                    </span>

                    <span id="searchResultsSort">
                      <span i18n:translate="sort_by">Sort by</span>
                          <span id="sorting-options">
                              <metal:sorting define-macro="sorting">
                                  <tal:block repeat="item view/sort_options">
                                      <tal:item define="selected item/selected">
                                      <a data-sort=""
                                         tal:condition="not:selected"
                                         tal:content="item/title"
                                         tal:attributes="href item/url;
                                                         data-sort python:item.sortkey and item.sortkey or None"></a>
                                      <strong tal:condition="selected" tal:content="item/title"></strong>
                                      <span tal:condition="not:repeat/item/end">&middot;</span>
                                      </tal:item>
                                  </tal:block>
                              </metal:sorting>
                          </span>
                    </span>
                </div>

                <div class="visualClear"><!-- --></div>

                <metal:searchresults define-macro="search_results">
                    <div id="search-results">

                        <metal:noresults tal:condition="not: batch">
                          <p i18n:domain="plone" class="no-results"><strong i18n:translate="description_no_results_found">No results were found.</strong></p>
                        </metal:noresults>

                        <metal:results tal:condition="batch"
                                       tal:define="isAnon context/@@plone_portal_state/anonymous;
                                                   toLocalizedTime nocall: context/@@plone/toLocalizedTime;
                                                   site_properties context/portal_properties/site_properties;
                                                   allowAnonymousViewAbout site_properties/allowAnonymousViewAbout;
                                                   show_about python:not isAnon or allowAnonymousViewAbout;">

                            <div class="row add-all"><a href="#">Add All To Cart</a></div>

                          <dl class="searchResults">

                            <div class="row result-header">
                                <div class="cell width-1 position-0 center">
                                    Add
                                </div>
                                <div class="cell width-10 position-1">
                                    Title
                                </div>
                            </div>

                              <tal:results repeat="item batch">

                                <div class="row search-item">

                                    <div class="cell width-1 position-0">
                                        <a id="add-to-cart" class="add-button center" href="#" rel="" title="Add / Remove"
                                            tal:attributes="href string:${context/portal_url}/cart?add=${item/UID};
                                                            rel item/UID">
                                            Add to Cart
                                        </a>
                                    </div>
                                    <div class="cell width-10 position-1">

                                        <a href="#"
                                         tal:attributes="href string:${item/getURL}/view;
                                                         class string:state-${item/review_state} item-title"
                                         tal:content="item/Title" />
                                        <a class="preview" href="#">preview</a>
                                    </div>
                                </div>

                              </tal:results>
                          </dl>
                          <div class="row">
                          <div metal:use-macro="context/batch_macros/macros/navigation" />
                          </div>
                        </metal:results>
                    </div>
                </metal:searchresults>

            </div>
        </div>

        <div class="visualClear"><!-- --></div>

    </form>
    <div class="preview-box">

        <div class="preview-header">
            Item Preview
        </div>

        <div class="preview-title">
            Item Title
        </div>
        <div class="preview-below-title">
        </div>

        <div class="preview-body">
            Loading...
        </div>

        <div class="preview-footer">
            <a class="button" href="#">Open</a>
            <a id="preview-close" href="#">Close</a>
        </div>
    </div>
  </div>

</body>
</html>
