<div tal:omit-tag=""
     i18n:domain="plone">

    <div class="visualClear"><!-- --></div>

    <div class="documentActions">
        <tal:docactions tal:condition="view/actions">

            <h5 class="hiddenStructure" i18n:translate="heading_document_actions">
                Document Actions
            </h5>

            <ul tal:define="normalizeString nocall: context/@@plone/normalizeString">
                <tal:actions tal:repeat="daction view/actions">
                    <li tal:define="action_id python: normalizeString(daction['id'])"
                        tal:attributes="id python: 'document-action-' + action_id">
                        <a href=""
                           tal:attributes="href daction/url;
                                           target daction/link_target|nothing;
                                           title daction/description;
                                           id python: 'cart' in action_id and action_id;
                                           rel python: 'cart' in action_id and context.UID();"
                           tal:content="daction/title">
                        </a>
                    </li>
                </tal:actions>
            </ul>
        </tal:docactions>

        <div tal:replace="structure provider:plone.documentactions" />

    </div>
</div>
